echo "-----&gt; haproxy-1.6.9"
#!/usr/bin/env bash∆í
echo "-----&gt; haproxy-1.6.9"
# change to the the BUILD_DIR ($1)
cd $1
curl -O http://nginx.org/download/nginx-1.10.1.tar.gz
tar --strip-components=1 -zxvf nginx-1.10.1.tar.gz
mkdir nginx
./configure  --prefix=nginx --error-log-path=nginx/errors.log --pid-path=nginx/nginx.pid --sbin-path=nginx/sbin --conf-path=nginx/nginx.conf
make install 